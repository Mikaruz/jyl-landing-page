---
import { Icon } from 'astro-iconify'
import { WHATSAPP_LINK } from "../config.ts";
import { Image } from 'astro:assets';

import hero1 from '../../assets/images/hero_1.jpg';
import hero3 from '../../assets/images/hero_3.jpg';
import hero4 from '../../assets/images/hero_4.jpg';
import womanDress from '../../assets/images/woman_dress.jpg';
---

<section class="pt-28 md:pt-20 pb-12 md:pb-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-16">
    <div class="grid lg:grid-cols-2 gap-8 items-center min-h-[90vh]">
      <!-- Contenido del Hero -->
      <div class="text-left space-y-4 md:space-y-6 fade-in">
        <div
          class="inline-block bg-primary-purple-100 text-primary-purple-600 px-4 py-2 rounded-full text-sm font-semibold mb-2 md:mb-4"
        >
          Servicio profesional de sublimación
        </div>
        <h1
          class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight"
        >
          Dale vida a tus diseños con sublimación en <span
          class="text-transparent bg-clip-text bg-linear-to-r from-primary-purple-500 to-primary-teal-500"
        >calandra profesional</span
        >
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl">
          Especialistas en sublimación, diseño y corte láser. Creamos tus
          uniformes y ropa personalizada con la más alta calidad.
        </p>
        <div class="flex flex-wrap gap-4 pt-4">
          <a
            href={WHATSAPP_LINK}
            target="_blank"
            class="inline-flex items-center bg-primary-purple-500 text-white px-8 py-4 rounded-full text-lg font-bold hover:bg-primary-purple-600 transition-all hover:scale-105 shadow-xl shadow-primary-purple-200"
          >
            <span>Cotiza tu proyecto</span>
            <Icon name="flowbite:arrow-right-outline" class="h-5 w-5 ml-2"/>
          </a>
          <a
            href="#productos"
            class="inline-flex items-center bg-white text-gray-800 border-2 border-gray-200 px-8 py-4 rounded-full text-lg font-bold hover:border-primary-purple-300 transition-all hover:scale-105"
          >
            Ver catálogo
          </a>
        </div>
        <!-- Beneficios Rápidos -->
        <div
          class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4 pt-6 md:pt-8"
        >
          <div
            class="flex items-center space-x-2 p-2 md:p-3 bg-white/50 rounded-lg hover:bg-white/80 transition-colors"
          >
            <div class="bg-primary-purple-100 p-2 rounded-full">
              <Icon name="akar-icons:thunder" class="h-5 w-5 text-primary-purple-500"/>
            </div>

            <span class="text-sm font-semibold">Calidad Premium</span>
          </div>
          <div
            class="flex items-center space-x-2 p-2 md:p-3 bg-white/50 rounded-lg hover:bg-white/80 transition-colors"
          >
            <div class="bg-primary-yellow-100 p-2 rounded-full">
              <Icon name="mdi:clock-outline" class="h-5 w-5 text-primary-yellow-600"/>
            </div>
            <span class="text-sm font-semibold">Entrega Rápida</span>
          </div>
          <div
            class="flex items-center space-x-2 p-2 md:p-3 bg-white/50 rounded-lg hover:bg-white/80 transition-colors"
          >
            <div class="bg-primary-teal-100 p-2 rounded-full">
              <Icon name="mdi:web" class="h-5 w-5 text-primary-teal-500"/>
            </div>
            <span class="text-sm font-semibold">Diseños Únicos</span>
          </div>
        </div>
      </div>

      <!-- Grid de Imágenes Masonry Responsive -->
      <div class="relative fade-in hidden lg:block">
        <div class="grid grid-cols-3 gap-3 h-[500px]">
          <!-- Imagen grande principal (2x2) -->
          <div class="col-span-2 row-span-2 rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow duration-300">
            <Image
              src={hero1}
              alt="Camiseta deportiva sublimada"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>

          <!-- Imagen superior derecha -->
          <div class="rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow duration-300">
            <Image
              src={hero3}
              alt="Uniforme personalizado"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>

          <!-- Imagen inferior derecha -->
          <div class="rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow duration-300">
            <Image
              src={hero4}
              alt="Ropa deportiva personalizada"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
        </div>
      </div>

      <!-- Grid Responsivo para Tablets (md) -->
      <div class="relative fade-in hidden md:block lg:hidden">
        <div class="grid grid-cols-2 gap-4 auto-rows-[200px]">
          <div class="rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow duration-300">
            <Image
              src={hero1}
              alt="Camiseta deportiva sublimada"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="row-span-2 rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow duration-300">
            <Image
              src={hero3}
              alt="Uniforme personalizado"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow duration-300">
            <Image
              src={hero4}
              alt="Ropa deportiva personalizada"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
        </div>
      </div>

      <!-- Grid Responsivo para Mobile -->
      <div class="relative fade-in md:hidden">
        <div class="grid grid-cols-2 gap-3 auto-rows-[150px]">
          <div class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
            <Image
              src={hero1}
              alt="Camiseta deportiva sublimada"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
            <Image
              src={hero3}
              alt="Uniforme personalizado"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
            <Image
              src={hero4}
              alt="Ropa deportiva personalizada"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
            <Image
              src={womanDress}
              alt="Diseño exclusivo"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>