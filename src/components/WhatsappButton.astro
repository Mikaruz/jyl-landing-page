---
import { WHATSAPP_LINK } from "../config.ts";
---

<!-- Botón Flotante de WhatsApp -->
<div class="whatsapp-container">
  <!-- Tooltip/Message que aparece al lado del botón -->
  <div class="whatsapp-tooltip">
    <div class="tooltip-content">
      <p class="tooltip-text">¿Necesitas ayuda?</p>
      <p class="tooltip-subtext">Chatea con nosotros</p>
    </div>
    <button class="tooltip-close" aria-label="Cerrar mensaje">
      <svg class="w-3 h-3" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Botón Principal -->
  <a
    href={WHATSAPP_LINK}
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-button"
    aria-label="Contactar por WhatsApp"
  >
    <svg class="whatsapp-icon" viewBox="0 0 24 24" fill="currentColor">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
    </svg>

    <!-- Indicador de notificación pulsante -->
    <span class="notification-badge"></span>
  </a>
</div>

<style>
  .whatsapp-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 12px;
  }

  /* Tooltip que aparece arriba del botón */
  .whatsapp-tooltip {
    background: white;
    border-radius: 16px;
    padding: 16px 20px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    gap: 12px;
    max-width: 240px;
    opacity: 0;
    transform: translateY(10px) scale(0.95);
    animation: slideInTooltip 0.5s ease-out 2s forwards;
    pointer-events: none;
  }

  .tooltip-content {
    flex: 1;
  }

  .tooltip-text {
    font-size: 14px;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 4px 0;
  }

  .tooltip-subtext {
    font-size: 12px;
    color: #6b7280;
    margin: 0;
  }

  .tooltip-close {
    background: transparent;
    border: none;
    color: #9ca3af;
    cursor: pointer;
    padding: 4px;
    border-radius: 4px;
    transition: all 0.2s;
    pointer-events: auto;
  }

  .tooltip-close:hover {
    background: #f3f4f6;
    color: #6b7280;
  }

  /* Botón Principal de WhatsApp */
  .whatsapp-button {
    position: relative;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 16px rgba(37, 211, 102, 0.4);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: pulse 2s infinite;
  }

  .whatsapp-button:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 24px rgba(37, 211, 102, 0.5);
  }

  .whatsapp-button:active {
    transform: scale(1.05);
  }

  .whatsapp-icon {
    width: 36px;
    height: 36px;
    color: white;
  }

  /* Badge de notificación */
  .notification-badge {
    position: absolute;
    top: 8px;
    right: 8px;
    width: 12px;
    height: 12px;
    background: #ef4444;
    border: 2px solid white;
    border-radius: 50%;
    animation: pulseBadge 2s infinite;
  }

  /* Animaciones */
  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 4px 16px rgba(37, 211, 102, 0.4);
    }
    50% {
      box-shadow: 0 4px 24px rgba(37, 211, 102, 0.6);
    }
  }

  @keyframes pulseBadge {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }

  @keyframes slideInTooltip {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
      pointer-events: auto;
    }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .whatsapp-container {
      bottom: 16px;
      right: 16px;
    }

    .whatsapp-button {
      width: 56px;
      height: 56px;
    }

    .whatsapp-icon {
      width: 32px;
      height: 32px;
    }

    .whatsapp-tooltip {
      max-width: 200px;
      padding: 12px 16px;
    }

    .tooltip-text {
      font-size: 13px;
    }

    .tooltip-subtext {
      font-size: 11px;
    }
  }

  @media (max-width: 380px) {
    .whatsapp-tooltip {
      display: none;
    }
  }

  /* Ocultar tooltip cuando se cierra */
  .whatsapp-tooltip.hidden {
    display: none;
  }
</style>

<script>
  // Script para cerrar el tooltip
  document.addEventListener('DOMContentLoaded', () => {
    const tooltipClose = document.querySelector('.tooltip-close');
    const tooltip = document.querySelector('.whatsapp-tooltip');

    if (tooltipClose && tooltip) {
      tooltipClose.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        tooltip.classList.add('hidden');
        // Guardar en localStorage que el usuario cerró el tooltip
        localStorage.setItem('whatsappTooltipClosed', 'true');
      });

      // Verificar si el usuario ya cerró el tooltip antes
      if (localStorage.getItem('whatsappTooltipClosed') === 'true') {
        tooltip.classList.add('hidden');
      }
    }
  });
</script>