---
import { Icon } from 'astro-iconify'
import { WHATSAPP_LINK } from "../config.ts";
import { Image } from 'astro:assets';
import logo from '../../assets/svg/logo.svg';
---

<nav id="navbar" class="fixed w-full bg-white/90 backdrop-blur-md shadow-sm z-50 transition-transform duration-300 ease-in-out md:translate-y-0">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-2 md:py-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-x-4">
        <Image
          src={logo}
          alt="Sublimado JYL Logo"
          class="h-14 md:h-20 w-auto"
        />
        <div class="hidden md:block">
          <h1 class="text-xl font-bold text-primary-purple-700">
            JL Sublimados
          </h1>
          <h2 class="text-sm text-gray-600">
            El estilo de tus sueños en tinta
          </h2>
        </div>
      </div>
      <a
        href={WHATSAPP_LINK}
        target="_blank"
        class="text-white bg-primary-purple-500 hover:bg-primary-purple-600 px-4 md:px-6 py-2 rounded-full text-sm font-semibold transition-all hover:scale-105 flex items-center gap-2"
      >
        <Icon name="ic:baseline-whatsapp" class="h-5 w-5" />
        <span>Contáctanos</span>
      </a>
    </div>
  </div>
</nav>

<script>
  let lastScrollTop = 0;
  const navbar = document.getElementById('navbar');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset || document.documentElement.scrollTop;

    // Solo ocultar en dispositivos móviles (menos de 768px)
    if (window.innerWidth < 768) {
      if (currentScroll > lastScrollTop && currentScroll > 50) {
        // Scrolling DOWN - ocultar navbar
        navbar?.classList.add('-translate-y-full');
      } else {
        // Scrolling UP - mostrar navbar
        navbar?.classList.remove('-translate-y-full');
      }
    }

    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
  });
</script>
