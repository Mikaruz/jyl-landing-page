---
import { Icon } from "astro-iconify";
import { WHATSAPP_LINK, WHATSAPP_NUMBER } from "../config";
---

<footer class="bg-gray-900 text-white py-12 md:py-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Columna 1: Información de la empresa -->
      <div class="space-y-4">
        <h3
          class="text-2xl font-bold bg-gradient-to-r from-primary-purple via-primary-teal to-primary-pink bg-clip-text text-transparent"
        >
          JL Sublimados
        </h3>
        <p class="text-gray-400 text-sm">
          Expertos en sublimación textil y personalización de prendas.
          Transformamos tus ideas en diseños únicos con la más alta calidad.
        </p>
        <div class="flex space-x-4">
          <a
            href={WHATSAPP_LINK}
            target="_blank"
            class="text-white hover:text-primary-green-400 transition-colors"
            aria-label="WhatsApp"
          >
            <Icon name="ic:baseline-whatsapp" class="h-6 w-6" />
          </a>
          <a
            href="https://instagram.com"
            target="_blank"
            class="text-white hover:text-primary-green-400 transition-colors"
            aria-label="Instagram"
          >
            <Icon name="mdi:instagram" class="h-6 w-6" />
          </a>
          <a
            href="https://facebook.com"
            target="_blank"
            class="text-white hover:text-primary-green-400 transition-colors"
            aria-label="Facebook"
          >
            <Icon name="ic:baseline-facebook" class="h-6 w-6" />
          </a>
        </div>
      </div>

      <!-- Columna 2: Productos -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Productos</h4>
        <ul class="space-y-2 text-gray-400">
          <li>
            <a href="#productos" class="hover:text-white transition-colors"
            >Ropa Deportiva</a
            >
          </li>
          <li>
            <a href="#productos" class="hover:text-white transition-colors"
            >Uniformes de Fútbol</a
            >
          </li>
          <li>
            <a href="#productos" class="hover:text-white transition-colors"
            >Ropa Casual</a
            >
          </li>
          <li>
            <a href="#productos" class="hover:text-white transition-colors"
            >Accesorios</a
            >
          </li>
          <li>
            <a href="#productos" class="hover:text-white transition-colors"
            >Personalización</a
            >
          </li>
        </ul>
      </div>

      <!-- Columna 3: Servicios -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Servicios</h4>
        <ul class="space-y-2 text-gray-400">
          <li>
            <a href="#" class="hover:text-white transition-colors"
            >Sublimación en Calandra</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"
            >Diseño Personalizado</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"
            >Corte Láser</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"
            >Confección</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"
            >Asesoría</a
            >
          </li>
        </ul>
      </div>

      <!-- Columna 4: Contacto -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Contacto</h4>
        <ul class="space-y-2 text-gray-400">
          <li class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-gray-400"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>Lima, Perú</span>
          </li>
          <li class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-gray-400"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a
              href={`tel:+${WHATSAPP_NUMBER}`}
              class="hover:text-white transition-colors"
            >
              {WHATSAPP_NUMBER.replace(/^51/, '+51 ')}
            </a>
          </li>
          <li class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-gray-400"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              ></path>
            </svg>
            <a
              href={WHATSAPP_LINK}
              class="hover:text-white transition-colors">WhatsApp</a>
          </li>
          <li class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-gray-400"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Lun - Sáb: 9am - 6pm</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Separador -->
    <div class="border-t border-gray-800 my-8"></div>

    <!-- Footer Bottom -->
    <div
      class="flex flex-col md:flex-row justify-between items-center text-gray-400 text-sm"
    >
      <p>
        © {new Date().getFullYear()}  JL Sublimados. All rights reserved.
      </p>
      <div class="flex flex-col md:flex-row md:items-center gap-1 md:gap-4 mt-2 md:mt-0">
        <span>Developed by <a href="https://github.com/Mikaruz" target="_blank" rel="noopener" class="underline hover:text-white">Mikaruz</a></span>
        <span>Design by <span class="underline">Adrian Vela Garcia</span></span>
      </div>
    </div>
  </div>
</footer>
