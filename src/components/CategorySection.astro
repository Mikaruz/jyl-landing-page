---
import { Image } from 'astro:assets';
import ropaDeportiva from '../../assets/images/ropa_deportiva.jpg';
import ropaCasual from '../../assets/images/ropa_casual.jpg';
import accesorios from '../../assets/images/accesorios.jpg';
---

<section id="productos" class="py-12 md:py-20 px-4 bg-white">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16 fade-in">
          <span
            class="text-primary-purple-600 font-semibold text-sm uppercase tracking-wider"
          >Nuestros Productos</span
          >
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mt-4 mb-6">
        Personalización para cada necesidad
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Expertos en sublimación de alta calidad para todo tipo de prendas y
        accesorios
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Categoría: Ropa Deportiva -->
      <div class="group fade-in">
        <div class="relative aspect-[3/4] rounded-2xl overflow-hidden mb-6">
          <Image
            src={ropaDeportiva}
            alt="Ropa Deportiva Personalizada"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Ropa Deportiva</h3>
            <ul class="space-y-1 text-sm">
              <li>• Camisetas de fútbol</li>
              <li>• Uniformes deportivos</li>
              <li>• Ropa de running</li>
              <li>• Sudaderas y buzos</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Categoría: Ropa Casual -->
      <div class="group fade-in">
        <div class="relative aspect-[3/4] rounded-2xl overflow-hidden mb-6">
          <Image
            src={ropaCasual}
            alt="Ropa Casual Personalizada"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Ropa Casual</h3>
            <ul class="space-y-1 text-sm">
              <li>• Polos y camisetas</li>
              <li>• Pantalones deportivos</li>
              <li>• Gorras y sombreros</li>
              <li>• Sudaderas personalizadas</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Categoría: Accesorios -->
      <div class="group fade-in">
        <div class="relative aspect-[3/4] rounded-2xl overflow-hidden mb-6">
          <Image
            src={accesorios}
            alt="Accesorios Personalizados"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Accesorios</h3>
            <ul class="space-y-1 text-sm">
              <li>• Bolsas y mochilas</li>
              <li>• Gorros y bufandas</li>
              <li>• Pañuelos deportivos</li>
              <li>• Accesorios textiles</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>